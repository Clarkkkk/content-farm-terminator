{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "1.2.0",
  "description": "__MSG_appDesc__",
  "author": "Danny Lin",
  "default_locale": "en",

  "icons": {
    "24": "img/alert-octagon.svg"
  },

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/",
    "https://*/"
  ],

  "background": {
    "scripts": [
      "utils.js",
      "background.js"
    ]
  },

  "options_ui": {
    "chrome_style": false,
    "open_in_tab": true,
    "page": "options.html"
  },

  "web_accessible_resources": [
    "blacklist.txt",
    "blocked.html"
  ]
}
